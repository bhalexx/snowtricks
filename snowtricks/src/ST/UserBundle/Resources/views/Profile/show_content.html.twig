{% trans_default_domain 'FOSUserBundle' %}

<div class="profile row">
	{% include "STCoreBundle:templates:breadcrumbs.html.twig" with { 'links' : {
        'Accueil' : path('st_snowtricks.homepage'),
        'Mon profil' : path('fos_user_profile_show')
    }} %}
	<div class="col-xs-12 title">
		<div>
			{% if user.webPath is not null %}
				<div class="profilePicture" style="background-image: url('{{ asset(user.webPath) }}')"></div>
			{% else %}
				<span class="fa fa-user-circle text-muted avatar"></span>
			{% endif %}
			<h2 class="username">
				{{ user.firstname }} {{ user.lastname }}
				<small class="text-muted">@{{ user.username }}</small>
			</h2>
		</div>
		{% if app.user.id == user.id %}
			<div class="options">
				<a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary">
				 	<span class="fa fa-pencil"></span> Modifier
				</a>
				{# <a href="{{ path('fos_user_profile_delete') }}" class="btn btn-danger">
				 	<span class="fa fa-trash"></span> Supprimer mon compte
				</a> #}
			</div>
		{% endif %}
	</div>
	<div class="col-xs-12">
		<p>
			<span class="fa fa-envelope-o"></span> <a href="mailto:{{ user.email }}">{{ user.email }}</a>
		</p>
	</div>
</div>
