<div class="col-lg-3">
	<div class="card">
		<div class="card-header">
			<a href="{{ path('st_snowtricks.trick_view', { id: trick.id, slug: trick.slug }) }}" class="cover" style="background-image: url({{ asset(trick.pictures.first.webPath) }})"></a>
			<b>{{ trick.name }}</b>
		</div>
		<div class="card-body">
			{{ trick.description|truncate(100) }}
		</div>
		<div class="card-footer {% if is_granted('ROLE_MEMBER') %}options{% endif %}">
			{% if is_granted('ROLE_MEMBER') %}
				<a href="{{ path('st_snowtricks.trick_edit', { id: trick.id, slug: trick.slug }) }}" title="Modifier">
					<span class="fa fa-pencil"></span>
				</a>				
			{% endif %}

			<a href="{{ path('st_snowtricks.trick_view', { id: trick.id, slug: trick.slug }) }}" title="Voir">
				<span class="fa fa-eye"></span>
			</a>
			
			{% if is_granted('ROLE_MEMBER') %}
				<a href="{{ path('st_snowtricks.trick_delete', { id: trick.id, slug: trick.slug }) }}" title="Supprimer">
					<span class="fa fa-trash"></span>
				</a>				
			{% endif %}
		</div>
	</div>
</div>